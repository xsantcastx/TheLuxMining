            class="w-6 h-6 transition-transform duration-300"
            [class.rotate-180]="acordeonesAbiertos['especificaciones']"
            fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        
        @if (acordeonesAbiertos['especificaciones']) {
          <div class="px-6 pb-6 border-t border-gray-100 animate-fade-in">
            <div class="grid md:grid-cols-2 gap-4 mt-6">
              @for (item of getObjectEntries(datosTecnicos.especificacionesTecnicas); track item.key) {
                <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl border border-gray-200">
                  <span class="font-medium text-gray-800">{{formatearTexto(item.key) | titlecase}}:</span>
                  <span class="text-ts-accent font-semibold">{{item.value}}</span>
                </div>
              }
            </div>
          </div>
        }
      </div>

      <!-- Acabados de Superficie -->
      <div class="mb-6 bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden transition-all duration-300">
        <button 
          (click)="toggleAcordeon('acabados')"
          class="w-full p-6 text-left flex items-center justify-between hover:bg-gray-50 transition-all duration-300 group">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 bg-ts-accent/10 rounded-full flex items-center justify-center group-hover:bg-ts-accent/20 transition-colors">
              <svg class="w-6 h-6 text-ts-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <h2 class="font-serif text-2xl text-ts-bg">Acabados de Superficie</h2>
          </div>
          <svg 
            class="w-6 h-6 transition-transform duration-300"
            [class.rotate-180]="acordeonesAbiertos['acabados']"
            fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        
        @if (acordeonesAbiertos['acabados']) {
          <div class="px-6 pb-6 border-t border-gray-100 animate-fade-in">
            <div class="grid md:grid-cols-3 gap-6 mt-6">
              @for (acabado of datosTecnicos.acabadosSuperficie; track acabado.nombre) {
                <div class="group">
                  <div class="relative overflow-hidden rounded-xl mb-4">
                    <img 
                      [src]="acabado.imagen" 
                      [alt]="acabado.nombre" 
                      class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110"
                      (error)="$event.target.src='/assets/productos/placeholder.jpg'">
                    <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                  </div>
                  <h3 class="font-semibold text-lg mb-2 text-ts-bg">{{acabado.nombre}}</h3>
                  <p class="text-sm text-gray-600 leading-relaxed">{{acabado.descripcion}}</p>
                </div>
              }
            </div>
          </div>
        }
      </div>

      <!-- Fichas Técnicas -->
      <div class="mb-6 bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden transition-all duration-300">
        <button 
          (click)="toggleAcordeon('fichas')"
          class="w-full p-6 text-left flex items-center justify-between hover:bg-gray-50 transition-all duration-300 group">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 bg-ts-accent/10 rounded-full flex items-center justify-center group-hover:bg-ts-accent/20 transition-colors">
              <svg class="w-6 h-6 text-ts-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h2 class="font-serif text-2xl text-ts-bg">Fichas Técnicas</h2>
          </div>
          <svg 
            class="w-6 h-6 transition-transform duration-300"
            [class.rotate-180]="acordeonesAbiertos['fichas']"
            fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        
        @if (acordeonesAbiertos['fichas']) {
          <div class="px-6 pb-6 border-t border-gray-100 animate-fade-in">
            <div class="space-y-4 mt-6">
              @for (ficha of datosTecnicos.fichasTecnicas; track ficha.nombre) {
                <div class="flex items-center justify-between p-5 bg-gray-50 rounded-xl border border-gray-200 hover:shadow-md transition-all duration-300">
                  <div class="flex-1">
                    <h3 class="font-semibold text-lg text-gray-900 mb-1">{{ficha.nombre}}</h3>
                    <p class="text-sm text-gray-600">{{ficha.descripcion}}</p>
                  </div>
                  <div class="flex items-center gap-4">
                    <span class="text-sm text-gray-600 bg-gray-200 px-3 py-1 rounded-full font-medium">{{ficha.tamano}}</span>
                    <a 
                      [href]="ficha.url" 
                      target="_blank" 
                      class="inline-flex items-center gap-2 px-5 py-2.5 bg-ts-accent text-white rounded-xl hover:bg-ts-accent/90 transition-all duration-300 transform hover:scale-105 shadow-sm font-medium">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                      </svg>
                      Descargar
                    </a>
                  </div>
                </div>
              }
            </div>
          </div>
        }
      </div>

      <!-- Información de Packing -->
      <div class="mb-6 bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden transition-all duration-300">
        <button 
          (click)="toggleAcordeon('packing')"
          class="w-full p-6 text-left flex items-center justify-between hover:bg-gray-50 transition-all duration-300 group">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 bg-ts-accent/10 rounded-full flex items-center justify-center group-hover:bg-ts-accent/20 transition-colors">
              <svg class="w-6 h-6 text-ts-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
            </div>
            <h2 class="font-serif text-2xl text-ts-bg">Información de Embalaje</h2>
          </div>
          <svg 
            class="w-6 h-6 transition-transform duration-300"
            [class.rotate-180]="acordeonesAbiertos['packing']"
            fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        
        @if (acordeonesAbiertos['packing']) {
          <div class="px-6 pb-6 border-t border-gray-100 animate-fade-in">
            <div class="overflow-x-auto mt-6">
              <table class="w-full text-sm bg-white rounded-xl overflow-hidden border border-gray-200">
                <thead>
                  <tr class="border-b border-gray-200 bg-gray-50">
                    <th class="text-left py-4 px-6 font-semibold text-gray-900">Grosor</th>
                    <th class="text-left py-4 px-6 font-semibold text-gray-900">Piezas/Pallet</th>
                    <th class="text-left py-4 px-6 font-semibold text-gray-900">Peso Aprox.</th>
                    <th class="text-left py-4 px-6 font-semibold text-gray-900">Dimensiones Pallet</th>
                    <th class="text-left py-4 px-6 font-semibold text-gray-900">Volumen</th>
                  </tr>
                </thead>
                <tbody>
                  @for (pack of datosTecnicos.packing; track pack.grosor) {
                    <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors">
                      <td class="py-4 px-6 font-medium text-ts-accent">{{pack.grosor}}</td>
                      <td class="py-4 px-6 text-gray-700">{{pack.piezasPorPallet}}</td>
                      <td class="py-4 px-6 text-gray-700">{{pack.pesoAprox}}</td>
                      <td class="py-4 px-6 text-gray-700">{{pack.dimensionesPallet}}</td>
                      <td class="py-4 px-6 text-gray-700">{{pack.volumen}}</td>
                    </tr>
                  }
                </tbody>
              </table>
            </div>
          </div>
        }
      </div>

    </div>
  </section>
}
